<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coocaa.remoteplatform.baseability">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.REBOOT" />
    <uses-permission android:name="android.permission.SHUTDOWN" />

    <application>
        <receiver
            android:name=".abilities.rtc.AlarmBootReceiver"
            android:enabled="true"
            android:exported="true"
            android:process=":baseability">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".abilities.rtc.AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            android:process=":baseability" />
        <receiver
            android:name=".abilities.reboot.RebootAlarmBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            android:process=":baseability" />

        <service
            android:name=".BaseAbilityClient"
            android:exported="true"
            android:process=":baseability">
            <meta-data
                android:name="id"
                android:value="com.coocaa.remoteplatform.baseability" />

            <intent-filter>
                <action android:name="coocaa.intent.action.remote.platform.client" />
            </intent-filter>
        </service>
    </application>

</manifest>