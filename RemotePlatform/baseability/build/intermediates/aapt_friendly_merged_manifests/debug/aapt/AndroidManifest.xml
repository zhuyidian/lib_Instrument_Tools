<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coocaa.remoteplatform.baseability"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.REBOOT" />

    <application>
        <receiver
            android:name="com.coocaa.remoteplatform.baseability.abilities.rtc.AlarmBootReceiver"
            android:enabled="true"
            android:exported="true"
            android:process=":baseability" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.coocaa.remoteplatform.baseability.abilities.rtc.AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            android:process=":baseability" />
        <receiver
            android:name="com.coocaa.remoteplatform.baseability.abilities.reboot.RebootAlarmBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            android:process=":baseability" />

        <service
            android:name="com.coocaa.remoteplatform.baseability.BaseAbilityClient"
            android:exported="true"
            android:process=":baseability" >
            <meta-data
                android:name="id"
                android:value="com.coocaa.remoteplatform.baseability" />

            <intent-filter>
                <action android:name="coocaa.intent.action.remote.platform.client" />
            </intent-filter>
        </service>
    </application>

</manifest>